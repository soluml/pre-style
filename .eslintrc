{
  "extends": "airbnb",
  "globals": {
  },
  "env": {
    "es6": true,
    "browser": true,
    "commonjs": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "max-len": 0,
    "new-cap": 0,
    "no-unused-vars": 1,
    "comma-dangle": 0,
    "spaced-comment": 0,
    "padded-blocks": 1,
    "space-in-parens": 0,
    "space-before-function-paren": 0,
    "no-underscore-dangle": 0,
    "quotes": [2, "single", {
      avoidEscape: true,
      allowTemplateLiterals: true
    }]
  }
}
