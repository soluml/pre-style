{
  "name": "pre-style-bin",
  "private": true,
  "config": {
    "outputdir": "./tmp",
    "docsdir": "../../../docs",
    "pages": [
      "index",
      "404"
    ]
  },
  "scripts": {
    "prebuild": "rimraf $npm_package_config_outputdir && node \"../../../dist/bin/index\" -d \"$npm_package_config_outputdir\" layouts/* pages/* partials/*",
    "build": "node index",
    "postbuild": "copyfiles -u 1 \"./../../*\" \"$npm_package_config_docsdir/test\" && copyfiles -u 1 \"$npm_package_config_outputdir/prestyle.css\" \"$npm_package_config_docsdir\"",
    "watcher": "node watcher",
    "start": "browser-sync start --server \"$npm_package_config_docsdir\" --files \"$npm_package_config_docsdir/**/*\""
  },
  "author": {
    "name": "Benjamin Solum",
    "email": "benjamin@soluml.com",
    "url": "http://soluml.com"
  },
  "license": "MIT",
  "dependencies": {
    "liquidjs": "^9.28.0"
  },
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "chokidar": "^3.5.2",
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2"
  }
}
